#!/usr/bin/env bash
# This should have been a make script. But apperantly the linux shebang is
# defeated by commands with more than 1 argument (#!/usr/bin/env make -f).
#                                                                     ^^
# Soo...
make -f - <<'EOF'
SHELL=/usr/bin/env bash

~/.aws/config: ~/.aws/profiles.html
	aws-config-gen -d --default-role admin $< > $@
#	aws-config-gen -r eu-central-1 --suffix -ğŸº --default-role admin $< >> $@
#	aws-config-gen -r eu-west-1 --suffix -ğŸ€ --default-role admin $< >> $@
#	aws-config-gen -r us-east-1 --suffix -ğŸ” --default-role admin $< >> $@

EOF
